<%= render partial: "layouts/header" %>
<section class="all-events">

    <div class= "container">
      <div class ="row">
        <div class ="col-sm-12 mt-5">
            
            <% if log_in? %>
                Welcome back<span class='h2'> Mr: <%= current_user.name %></span>
            <% end %>

            <%= will_paginate %>
                <% current_user.user_events.each do |event| %>

                <div class="jumbotron jumbotron-fluid mt-5">
                    <div class="container">
                        <p><%= Event.find_by_id(event.event_id).name %></p>
                        <p><%= Event.find_by_id(event.event_id).location %></p>
                        <p><%= Event.find_by_id(event.event_id).date %></p>
                        <p><%= Event.find_by_id(event.event_id).description %></p>
                    </div>
                </div>
            
                <% end %>
            <%= will_paginate %>

            <div id='create-event'>
                <%= link_to "Create event", new_event_path %>
            </div>
        </div>
      </div>
    </div>

</section>
<%= render partial: "layouts/footer" %>


