<%= render partial: "layouts/header" %>
<section class="create-event bg-dark">

    <div class= "container bg-secondary pt-5" style="height: 40rem" >
        <div class ="row pt-5">
            <div class ="col-sm-12">
                
                <div class="d-flex justify-content-center">
                    <div class="card" style="width: 40rem; height: 25rem">
                        <div class="card-body text-white bg-dark">
                            <h5 class="card-title"><%= @event.creator.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= @event.name %></h6>
                            <p><%= @event.location %></p>
                            <p><%= @event.date %></p>
                            <p><%= @event.description %></p>
                        </div>
                        <div class= 'd-flex justify-content-center bg-dark pb-5'>
                            <%= link_to "attend",  events_attend_path(user_id: current_user, event_id: @event.id ), class: "btn btn-success " %>
                        </div>
                    </div>
                </div>   
                
            </div>
        </div>
          
    </div>

    <div class= "container bg-secondary mt-5" style="height: 45rem" >
        <div class ="row pt-5 d-flex justify-content-center">
        <h2 class="card-title pl-40 text-white text-center ">Attendees</h2>
        
            <div class ="col-sm-12">
                <div class="d-flex justify-content-center">
                
                    <div class="card"  style="width: 18rem;">

                        <% @event.attendees.each do |attendee| %>
                            <br>
                            <h5 class="card-title text-center"><%= attendee.name %></h5>
                            <br>
                        <% end %>|
                            
                        
                    </div>
                </div>
            </div>    
        </div>    
    </div>
</section>

