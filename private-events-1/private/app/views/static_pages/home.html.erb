<!DOCTYPE html>
<html>
  <head>
    <title>StaticPages#home</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render partial: "layouts/header" %>
    
    <div class= "container">
      <div class ="row">
        <div class ="col-sm-12">
          <%= yield %>
          
        </div>
      </div>
    </div>

  
    <h1>ALL EVENTS</h1>
    <p class="title-events">Upcoming Events</p>
    <%= render partial:'shared/event', locals: { events: Event.past.paginate(page: params[:page], per_page: 5) } %>
    <p class="title-events">Past Events</p>
    <%= render partial:'shared/event', locals: { events: Event.upcoming.paginate(page: params[:page], per_page: 5) } %>


  <%= render partial: "layouts/footer" %>
  </body>
</html>
