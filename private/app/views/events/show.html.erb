<section class="create-event">

    <div class= "container">
        <div class ="row">
            <div class ="col-sm-12">
                <p class="h3">PrivateMerbers Events</p>
                <p><%= @event.user.name %></p>
                <p><%= @event.name %></p>
                <p><%= @event.location %></p>
                <p><%= @event.date %></p>
                <p><%= @event.description %></p>
            </div>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">

            <% @event.attendees.each do |attendee| %>
                <li class="list-group-item"><%= attendee.name %></li>
                <li class="list-group-item"><%= attendee.email %></li>
            <% end %>
            
        </ul>
    </div>
</section>

